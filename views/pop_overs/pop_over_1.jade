div.pop_over
    link(rel="stylesheet", href="stylesheets/pop_over1.css")
    h3.pop_over_head #{first_name}
    table(style="width: 100%; overflow: wrap; background-color:#dedede; min-height: 350px;")
        tr
            td(style="text-align:left;min-width:150px;border-right:solid;border-color: darkGray;vertical-align: top;")
                h4 About Me:
                p #{about}
            td(style="text-align:left;min-width: 200px;vertical-align: top;")
                h4 Background:
                ul(style="padding-left: 20px;")
                    li
                        p(style="color: #0e1042; text-decoration: underline; font-style: italic; font-weight: 700;") Last name
                            p #{last_name}
                    li
                        p(style="color: #0e1042;text-decoration: underline; font-style: italic; font-weight: 700;") Gender
                            p #{gender}
                    li
                        p(style="color: #0e1042;text-decoration: underline; font-style: italic; font-weight: 700;") Program
                            p #{program}
                    li
                        p(style="color: #0e1042;text-decoration: underline; font-style: italic; font-weight: 700;") Year
                            p #{year}